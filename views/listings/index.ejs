<% layout("/layouts/boilerplate") %>
<div class="filters">
  <div class="filter" data-category="Trending">
    <div><i class="fa-solid fa-fire"></i></div>
    <p>Trending</p>
  </div>
  <div class="filter" data-category="Rooms">
    <div><i class="fa-solid fa-bed Rooms"></i></div>
    <p>Rooms</p>
  </div>
  <div class="filter" data-category="Iconic Citites">
    <div><i class="fa-solid fa-city IconicCitites"></i></div>
    <p>Iconic Citites</p>
  </div>
  <div class="filter" data-category="Mountains">
    <div><i class="fa-solid fa-mountain Mountains"></i></div>
    <p>Mountains</p>
  </div>
  <div class="filter" data-category="Castles">
    <div><i class="fa-brands fa-fort-awesome Castles"></i></div>
    <p>Castles</p>
  </div>
  <div class="filter" data-category="Amazing Pools">
    <div><i class="fa-solid fa-person-swimming AmazingPools"></i></div>
    <p>Amazing Pools</p>
  </div>
  <div class="filter" data-category="Camping">
    <div><i class="fa-solid fa-campground Camping"></i></div>
    <p>Camping</p>
  </div>
  <div class="filter" data-category="Farms">
    <div><i class="fa-solid fa-cow Farms"></i></div>
    <p>Farms</p>
  </div>
  <div class="filter" data-category="Arctic">
    <div><i class="fa-solid fa-snowman Arctic"></i></div>
    <p>Arctic</p>
  </div>
  <div class="filter" data-category="Domes">
    <div><i class="fa-solid fa-landmark-dome Domes"></i></div>
    <p>Domes</p>
  </div>
  <div class="filter" data-category="Boats">
    <div><i class="fa-solid fa-sailboat Boats"></i></div>
    <p>Boats</p>
  </div>
  <div class="tax-toggler">
    <div class="form-check-reverse form-switch">
      <input
        class="form-check-input"
        type="checkbox"
        role="switch"
        id="switchCheckDefault"
      />
      <label class="form-check-label" for="switchCheckDefault"
        >Display total after taxes</label
      >
    </div>
  </div>
</div>
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
  <%for(let listing of allListings){%>
  <a href="/listings/<%= listing.id%>" class="listing-link">
    <div class="card col listing-card" data-category="<%=listing.category%>">
      <img
        src="<%-listing.image.url%>"
        class="card-img-top"
        alt="listingimage"
        style="height: 20rem"
      />

      <div class="card-img-overlay">afsdlk</div>
      <div class="card-body">
        <p class="card-text">
          <b><%=listing.title%></b><br />
          &#8377;<%=listing.price.toLocaleString("en-IN")%>/night
          <i class="tax-show">+18% GST</i>
        </p>
      </div>
    </div>
  </a>
  <%}%>
</div>
